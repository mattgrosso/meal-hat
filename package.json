{
  "name": "meal-hat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "update-version": "node src/assets/javascript/version.js",
    "serve": "nodemon --watch .env --exec \"vue-cli-service serve\"",
    "build": "yarn update-version && vue-cli-service build",
    "lint": "vue-cli-service lint && stylelint '**/*.vue' --formatter verbose --fix",
    "deploy": "yarn build && surge dist/",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "axios": "^1.3.2",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.3",
    "core-js": "^3.8.3",
    "firebase": "^9.22.2",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.0",
    "pluralize": "^8.0.0",
    "register-service-worker": "^1.7.2",
    "shepherd.js": "^11.2.0",
    "uuid": "^9.0.0",
    "v-calendar": "^3.0.3",
    "vue": "^3.2.13",
    "vue-router": "^4.2.2",
    "vuedraggable": "^4.1.0",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@playwright/test": "^1.55.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-pwa": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-standard": "^6.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-vue": "^8.0.3",
    "postcss-html": "^1.6.0",
    "sass": "^1.58.0",
    "sass-loader": "^13.2.0",
    "stylelint": "13.12.0",
    "stylelint-config-sass-guidelines": "^11.1.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "vue/multi-word-component-names": "off",
      "no-trailing-spaces": "warn",
      "eol-last": "off",
      "quotes": [
        "off",
        "double"
      ],
      "semi": "off",
      "comma-dangle": "off",
      "space-before-function-paren": "warn",
      "indent": "warn",
      "no-undef": "warn",
      "padded-blocks": "warn",
      "object-curly-spacing": "warn",
      "array-bracket-spacing": "warn",
      "no-unused-vars": "warn",
      "no-empty": "warn",
      "prefer-const": "warn",
      "no-multiple-empty-lines": "warn",
      "no-useless-return": "off",
      "no-debugger": "warn",
      "no-unmodified-loop-condition": "off",
      "no-constant-condition": "off",
      "comma-spacing": "warn"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
